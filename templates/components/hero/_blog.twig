{% import 'macros/_utils' as utils %}

<div class="container">
    <div class="aspect-video relative bg-yellow-50">
        {% if entry.heroImage|length and entry.heroImage.one().source %}
            <div class="px-2 absolute bottom-4 right-4 bg-black/50 text-white">Afbeelding: {{ entry.heroImage.one().source }}</div>
        {% endif %}
        {{ utils.image(entry.heroImage.one(), 'w-full h-full object-cover', 1070, 600, 360, 200) }}
    </div>

    <div class="py-5 my-5 border-b border-yellow-300">
        <h1 class="text-3xl font-semibold">{{ entry.heroTitle|default(entry.title) }}</h1>
        
        <div class="mt-2 flex items-center gap-2">
            <span>Door: <a href="/auteur/gerben" class="text-yellow-500 hover:underline">Gerben</a></span>
            <span class="">{{ entry.postDate|date("j M, Y")|lower }}</span>
        </div>

        <div class="flex items-center gap-2">
            <span>Geplaatst in: <a href="/{{ entry.gerelateerdAan }}" class="text-yellow-500 hover:underline">{{ entry.gerelateerdAan }}</a></span>
        </div>
    </div>
</div>