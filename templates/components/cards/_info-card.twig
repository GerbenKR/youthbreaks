{% import 'macros/_utils' as utils %}

{% set title = title|default(null) %}
{% set description = description|default(null) %}
{% set image = image|default(null) %}

<div class="group w-full overflow-hidden">
    <div class="h-[250px]  bg-yellow-50">
        {{ utils.image(image, 'w-full h-full object-cover pointer-events-none group-hover:scale-105 duration-200 ease-in-out', 400, 250, 360, 250) }}
    </div>

    <div class="mt-4">
        <h3 class="text-xl font-bold">{{ title }}</h3>

        <div class="mt-2">
            {{description|raw}}
        </div>

        <div class="mt-3 text-yellow-500"><b>Bekijk hier meer &raquo;</b></div>
    </div>
</div>
