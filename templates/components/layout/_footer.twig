{% set currentSiteGroup = craft.app.sites.getCurrentSite().group %}
{% set cities = craft.app.sites.getSitesByGroupId(currentSiteGroup.id) %}

<footer class="container py-4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
    <div>
        <h3 class="text-lg font-semibold">Voorbereid op Jongerenvakantie</h3>
        <p>Â© 2024 Voorbereid op Jongerenvakantie.</p>
        <p><i>Deze website maakt deels gebruik van beeldmateriaal van derden.</i></p>
        <p>info@voorbereid-op-vakantie.nl</p>
    </div>
    <div>
        <h4 class="font-bold">Bestemmingen</h4>
        <ul class="mt-3">
            {% for city in cities %}
                {% set globalSet = craft.globalSets().handle('site').siteId(city.id).one() %}
                <li>
                    <a href="{{ city.baseUrl }}" class="hover:underline">{{ globalSet.siteName }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
</footer>